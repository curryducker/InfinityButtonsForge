{
  "multipart": [
    {
      "when": {"pressed": false},
      "apply": {
        "model": "block/bricks",
        "uvlock": true
      }
    },
    {
      "when": {"pressed": true},
      "apply": {
        "model": "infinitybuttons:block/secret_buttons/small_bricks/brick_secret_button_top"
      }
    },
    {
      "when": { "AND": [{"pressed": true}, {"facing": "north"}]},
      "apply": {
        "model": "infinitybuttons:block/secret_buttons/small_bricks/brick_secret_button"
      }
    },
    {
      "when": { "AND": [{"pressed": true}, {"facing": "east"}]},
      "apply": {
        "model": "infinitybuttons:block/secret_buttons/small_bricks/brick_secret_button",
        "y": 90
      }
    },
    {
      "when": { "AND": [{"pressed": true}, {"facing": "south"}]},
      "apply": {
        "model": "infinitybuttons:block/secret_buttons/small_bricks/brick_secret_button",
        "y": 180
      }
    },
    {
      "when": { "AND": [{"pressed": true}, {"facing": "west"}]},
      "apply": {
        "model": "infinitybuttons:block/secret_buttons/small_bricks/brick_secret_button",
        "y": 270
      }
    }
  ]
}